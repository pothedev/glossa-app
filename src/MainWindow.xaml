    <Window x:Class="Glossa.MainWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:Glossa"
            mc:Ignorable="d"
            Title="Glossa" Height="600" Width="1000"
            Background="#121212"
            Icon="pack://application:,,,/assets/Glossa_logo4.ico"
            SizeChanged="Window_SizeChanged">
    <Window.Resources>
        <Style x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Border" 
                                    Background="Transparent"
                                    Width="20">
                            <Path x:Name="Arrow"
                                      Fill="#FFFFFF"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Data="M 0 0 L 4 4 L 8 0 Z"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="#2C2C2C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#1D1D21"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#36363B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="0"
                                    Padding="5,2">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="true">
                                <Setter Property="Background" Value="#2C2C2C"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="#2C2C2C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CustomRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                        Background="Transparent"
                        CornerRadius="8"
                        Padding="10"
                        Margin="4">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Grid Width="16" Height="16" Margin="0,0,10,0">
                                    <Ellipse x:Name="OuterCircle" Stroke="#748297" StrokeThickness="2"/>
                                    <Ellipse x:Name="InnerCircle"
                                     Fill="#2E6BCE"
                                     Width="8"
                                     Height="8"
                                     Visibility="Collapsed"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                                </Grid>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="OuterCircle" Property="Stroke" Value="#2E6BCE"/>
                                <Setter TargetName="border" Property="Background" Value="#222222"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A1A1A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Padding="30">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
            <TextBlock Text="Good afternoon, Milana"
                       Foreground="#ffffff"
                       FontSize="23"
                       FontWeight="SemiBold"/>

            <StackPanel Orientation="Horizontal" Margin="0 25 0 10" HorizontalAlignment="Left">
                <TextBlock Text="Audio" Foreground="#717171" FontSize="14" Margin="0 0 15 0"/>
                <TextBlock Text="Transcript" Foreground="#717171" FontSize="14" Margin="0 0 15 0"/>
                <TextBlock Text="Other" Foreground="#717171" FontSize="14" Margin="0 0 15 0"/>
            </StackPanel>

            <!-- Main content area with 3-column grid -->
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column (Main Content) -->
                <Border x:Name="ScrollableContentBorder"
                        Grid.Column="0"
                        BorderThickness="0 1 0 0"
                        BorderBrush="#535353" Padding="0 20 0 0">
                    <ScrollViewer>
                        <StackPanel Orientation="Vertical">

                            <!-- Language -->
                            <Border BorderThickness="0 0 0 0.3" BorderBrush="#535353" Padding="0 0 0 30">
                                <Grid Margin="0 0 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- User Language -->
                                    <StackPanel Grid.Column="0" Margin="0 0 15 0">
                                        <TextBlock Text="Your Language" Foreground="#fff" FontSize="14" Margin="0 0 0 8"/>
                                        <ComboBox x:Name="UserLanguageCombobox"
                                                  HorizontalContentAlignment="Stretch"
                                                  SelectionChanged="UserLanguageCombobox_SelectionChanged"
                                                  Foreground="#FFFFFF">
                                            <ComboBox.Template>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <Border x:Name="Border" 
                                                                Background="#1D1D21"
                                                                CornerRadius="4"
                                                                BorderThickness="1"
                                                                BorderBrush="#36363B"
                                                                Padding="4">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <ContentPresenter x:Name="ContentSite"
                                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                  Margin="5,2,5,2"
                                                                                  VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Left"/>
                                                                <ToggleButton x:Name="ToggleButton"
                                                                                Style="{StaticResource ComboBoxToggleButton}"
                                                                                Grid.Column="1"
                                                                                Focusable="false"
                                                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                                ClickMode="Press"/>
                                                            </Grid>
                                                        </Border>
                                                        <Popup x:Name="Popup"
                                                               Placement="Bottom"
                                                               IsOpen="{TemplateBinding IsDropDownOpen}"
                                                               AllowsTransparency="True" 
                                                               Focusable="False"
                                                               PopupAnimation="Slide">
                                                            <Border x:Name="DropDownBorder"
                                                                    CornerRadius="4"
                                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                                    Background="#1D1D21"
                                                                    BorderThickness="1"
                                                                    BorderBrush="#36363B">
                                                                <ScrollViewer x:Name="ScrollViewer">
                                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                                </ScrollViewer>
                                                            </Border>
                                                        </Popup>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#717171"/>
                                                        </Trigger>
                                                        <Trigger Property="IsKeyboardFocusWithin" Value="true">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#717171"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="false">
                                                            <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </ComboBox.Template>

                                        </ComboBox>
                                    </StackPanel>

                                    <!-- Target Language -->
                                    <StackPanel Grid.Column="1" Margin="15 0 0 0">
                                        <TextBlock Text="Target Language" Foreground="#fff" FontSize="14" Margin="0 0 0 8"/>
                                        <ComboBox x:Name="TargetLanguageCombobox"
                                                  SelectionChanged="TargetLanguageCombobox_SelectionChanged"
                                                  HorizontalContentAlignment="Stretch"
                                                  Foreground="#FFFFFF">
                                            <ComboBox.Template>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <Border x:Name="Border" 
                                                                Background="#1D1D21"
                                                                CornerRadius="4"
                                                                BorderThickness="1"
                                                                BorderBrush="#36363B"
                                                                Padding="4">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <ContentPresenter x:Name="ContentSite"
                                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                  Margin="5,2,5,2"
                                                                                  VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Left"/>
                                                                <ToggleButton x:Name="ToggleButton"
                                                                                Style="{StaticResource ComboBoxToggleButton}"
                                                                                Grid.Column="1"
                                                                                Focusable="false"
                                                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                                ClickMode="Press"/>
                                                            </Grid>
                                                        </Border>
                                                        <Popup x:Name="Popup"
                                                                Placement="Bottom"
                                                                IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                AllowsTransparency="True" 
                                                                Focusable="False"
                                                                PopupAnimation="Slide">
                                                            <Border x:Name="DropDownBorder"
                                                                    CornerRadius="4"
                                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                                    Background="#1D1D21"
                                                                    BorderThickness="1"
                                                                    BorderBrush="#36363B">
                                                                <ScrollViewer x:Name="ScrollViewer">
                                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                                </ScrollViewer>
                                                            </Border>
                                                        </Popup>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#717171"/>
                                                        </Trigger>
                                                        <Trigger Property="IsKeyboardFocusWithin" Value="true">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#717171"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="false">
                                                            <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </ComboBox.Template>
                                            <ComboBoxItem Content="Google Cloud"/>
                                            <ComboBoxItem Content="ElevenLabs"/>
                                            <ComboBoxItem Content="Windows Default"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            
                            
                            <!-- TTS Model Selection Row -->
                            <Border BorderThickness="0 0 0 0.3" BorderBrush="#535353" Padding="0 0 0 30" Margin="0 20 0 0">

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    


                                    <!-- Input TTS Model -->
                                    <StackPanel Grid.Column="0" Margin="0 0 15 0">
                                        <TextBlock Text="Your TTS Model (What other hear)" Foreground="#fff" FontSize="14" Margin="0 0 0 8"/>
                                        <!--Input TTS model dropdown (combobox)-->
                                        <ComboBox x:Name="InputTTSComboBox"
                                                  SelectionChanged="InputTTSComboBox_SelectionChanged"  
                                                  HorizontalContentAlignment="Stretch"
                                                  Foreground="#FFFFFF">
                                            <ComboBox.Template>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <Border x:Name="Border" 
                                              Background="#1D1D21"
                                              CornerRadius="4"
                                              BorderThickness="1"
                                              BorderBrush="#36363B"
                                              Padding="4">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <ContentPresenter x:Name="ContentSite"
                                                                Content="{TemplateBinding SelectionBoxItem}"
                                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                Margin="5,2,5,2"
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Left"/>
                                                                <ToggleButton x:Name="ToggleButton"
                                                            Style="{StaticResource ComboBoxToggleButton}"
                                                            Grid.Column="1"
                                                            Focusable="false"
                                                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                            ClickMode="Press"/>
                                                            </Grid>
                                                        </Border>
                                                        <Popup x:Name="Popup"
                                             Placement="Bottom"
                                             IsOpen="{TemplateBinding IsDropDownOpen}"
                                             AllowsTransparency="True" 
                                             Focusable="False"
                                             PopupAnimation="Slide">
                                                            <Border x:Name="DropDownBorder"
                                                  CornerRadius="4"
                                                  MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                  MinWidth="{TemplateBinding ActualWidth}"
                                                  Background="#1D1D21"
                                                  BorderThickness="1"
                                                  BorderBrush="#36363B">
                                                                <ScrollViewer x:Name="ScrollViewer">
                                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                                </ScrollViewer>
                                                            </Border>
                                                        </Popup>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#717171"/>
                                                        </Trigger>
                                                        <Trigger Property="IsKeyboardFocusWithin" Value="true">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#717171"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="false">
                                                            <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </ComboBox.Template>
                                            <ComboBoxItem Content="Google Cloud"/>
                                            <ComboBoxItem Content="ElevenLabs"/>
                                            <ComboBoxItem Content="Windows Default"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- Output TTS Model -->
                                    <StackPanel Grid.Column="1" Margin="15 0 0 0">
                                        <TextBlock Text="Other TTS Model (What you hear)" Foreground="#fff" FontSize="14" Margin="0 0 0 8"/>
                                        <ComboBox x:Name="OutputTTSComboBox"
                                                  SelectionChanged="OutputTTSComboBox_SelectionChanged"
                                                  HorizontalContentAlignment="Stretch"
                                                  Foreground="#FFFFFF">
                                            <ComboBox.Template>
                                                <ControlTemplate TargetType="ComboBox">
                                                    <Grid>
                                                        <Border x:Name="Border" 
                                                                Background="#1D1D21"
                                                                CornerRadius="4"
                                                                BorderThickness="1"
                                                                BorderBrush="#36363B"
                                                                Padding="4">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <ContentPresenter x:Name="ContentSite"
                                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                                  Margin="5,2,5,2"
                                                                                  VerticalAlignment="Center"
                                                                                  HorizontalAlignment="Left"/>
                                                                <ToggleButton x:Name="ToggleButton"
                                                                              Style="{StaticResource ComboBoxToggleButton}"
                                                                              Grid.Column="1"
                                                                              Focusable="false"
                                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                              ClickMode="Press"/>
                                                            </Grid>
                                                        </Border>
                                                        <Popup x:Name="Popup"
                                                               Placement="Bottom"
                                                               IsOpen="{TemplateBinding IsDropDownOpen}"
                                                               AllowsTransparency="True" 
                                                               Focusable="False"
                                                               PopupAnimation="Slide">
                                                            <Border x:Name="DropDownBorder"
                                                                    CornerRadius="4"
                                                                    MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                                    Background="#1D1D21"
                                                                    BorderThickness="1"
                                                                    BorderBrush="#36363B">
                                                                <ScrollViewer x:Name="ScrollViewer">
                                                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                                </ScrollViewer>
                                                            </Border>
                                                        </Popup>
                                                    </Grid>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="true">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#717171"/>
                                                        </Trigger>
                                                        <Trigger Property="IsKeyboardFocusWithin" Value="true">
                                                            <Setter TargetName="Border" Property="BorderBrush" Value="#717171"/>
                                                        </Trigger>
                                                        <Trigger Property="IsEnabled" Value="false">
                                                            <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </ComboBox.Template>
                                            <ComboBoxItem Content="Google Cloud"/>
                                            <ComboBoxItem Content="ElevenLabs"/>
                                            <ComboBoxItem Content="Windows Default"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Grid>
                            </Border>


                            <!--Gender-->
                            <Border BorderThickness="0 0 0 0.3" BorderBrush="#535353" Padding="0 0 0 30">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <!--User TTS gender (radiobox)-->
                                        <StackPanel x:Name="UserVoiceGenderPanel" Margin="0 20 0 0">
                                            <TextBlock Text="Your Voice Gender" Foreground="White" FontSize="14" Margin="0 0 0 10"/>
                                            <RadioButton x:Name="UserMaleRadio" Content="Male" GroupName="UserGender" Style="{StaticResource CustomRadioButtonStyle}"/>
                                            <RadioButton x:Name="UserFemaleRadio" Content="Female" GroupName="UserGender" Style="{StaticResource CustomRadioButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="15 0 0 0">
                                        <!--Target TTS gender (radiobutton)-->
                                        <StackPanel x:Name="TargetVoiceGenderPanel" Margin="0 20 0 0">
                                            <TextBlock Text="Target Voice Gender" Foreground="White" FontSize="14" Margin="0 0 0 10"/>
                                            <RadioButton x:Name="TargetMaleRadio" Content="Male" GroupName="TargetGender" Style="{StaticResource CustomRadioButtonStyle}"/>
                                            <RadioButton x:Name="TargetFemaleRadio" Content="Female" GroupName="TargetGender" Style="{StaticResource CustomRadioButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>


                            <!--Mode-->
                            <Border BorderThickness="0 0 0 0.3" BorderBrush="#535353" Padding="0 0 0 30">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <StackPanel x:Name="UserModePanel" Margin="0 20 0 0">
                                            <TextBlock Text="Your Interpretation Mode" Foreground="White" FontSize="14" Margin="0 0 0 10"/>
                                            <RadioButton Content="Default" GroupName="UserMode" Style="{StaticResource CustomRadioButtonStyle}"/>
                                            <RadioButton Content="Summary" GroupName="UserMode" Style="{StaticResource CustomRadioButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="15 0 0 0">
                                        <StackPanel x:Name="TargetModePanel" Margin="0 20 0 0">
                                            <TextBlock Text="Target Interpretation Mode" Foreground="White" FontSize="14" Margin="0 0 0 10"/>
                                            <RadioButton Content="Default" GroupName="TargetMode" Style="{StaticResource CustomRadioButtonStyle}"/>
                                            <RadioButton Content="Summary" GroupName="TargetMode" Style="{StaticResource CustomRadioButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>


                            <!--Translate Enabled/Disabled-->
                            <Border BorderThickness="0 0 0 0.3" BorderBrush="#535353" Padding="0 0 0 30">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <StackPanel x:Name="YourTogglePanel" Margin="0 20 0 0">
                                            <TextBlock Text="Your Translation" Foreground="White" FontSize="14" Margin="0 0 0 10"/>
                                            <RadioButton Content="Enabled" GroupName="UserToggle" Style="{StaticResource CustomRadioButtonStyle}"/>
                                            <RadioButton Content="Disabled" GroupName="UserToggle" Style="{StaticResource CustomRadioButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="15 0 0 0">
                                        <StackPanel x:Name="TargetTogglePanel" Margin="0 20 0 0">
                                            <TextBlock Text="Target Translation" Foreground="White" FontSize="14" Margin="0 0 0 10"/>
                                            <RadioButton Content="Enabled" GroupName="TargetToggle" Style="{StaticResource CustomRadioButtonStyle}"/>
                                            <RadioButton Content="Disabled" GroupName="TargetToggle" Style="{StaticResource CustomRadioButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Middle Column (Spacer) -->
                <Border Grid.Column="1"/>

                <!-- Right Column (Yellow placeholder) -->
                <StackPanel Grid.Column="2"
                            Orientation="Vertical"
                            HorizontalAlignment="Left"
                            Background="Transparent">
                    <!--<TextBlock Text="yooooooo"/>-->
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>